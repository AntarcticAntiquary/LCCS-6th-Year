# Selection sort

import random as r

def select_sort(List):
    unsorted = List
    keep_going = True
    for i in range(len(List)):
        workings = List[i]
        swap_index = 0
        swap_value = workings
        for j in range(i, len(List)):
            if List[j] < swap_value:
                swap_index = j
                swap_value = List[j]
        if swap_index != 0:
            List[i] = swap_value
            List[swap_index] = workings
        print(List)
    return List

def insert_sort(List):
    sorted_list = []
    for element in List:
        done_with = False
        for j in range(len(sorted_list)):
            if element < sorted_list[j]:
                sorted_list.insert(j, element)
                done_with = True
                break
        if not done_with:
            sorted_list.append(element)
        print(List, sorted_list)

def quicksort(List):
    if len(List) <= 1:
        return List
    pivot = List[-1]
    higher = []
    lower = []
    equal = []
    for element in List:
        if element == pivot:
            equal.append(element)
        elif element < pivot:
            lower.append(element)
        elif element > pivot:
            higher.append(element)
    lower = quicksort(lower)
    higher = quicksort(higher)
    return lower + equal + higher

unordered = []

for i in range(r.randint(5,15)):
    unordered.append(r.randint(0,100))
    
print(unordered)
print()
select_sort(unordered)
