# Task 6
print('Task 6:\n')
def square(x):
    return x*x
def is_even(x):
    if x%2==0:
        return True
    else:
        return False
print('16 squared is',square(16))
print('42 is even returns',is_even(42))
print()

# Task 7
print('Task 7:\n')
data=[5,3,8,3,9,12,5,3]
total=0
for number in data:
    total+=number
print('The mean of the data is',total/len(data))
mode=0
modeCount=0
for number in data:
    count=data.count(number)
    if count>modeCount:
        modeCount=count
        mode=number
print('The mode of the data is',mode,'which appears',modeCount,'times')
biggest=0
smallest=100
for number in data:
    if number>biggest:
        biggest=number
    if number<smallest:
        smallest=number
print('The biggest number is',biggest,'and the smallest is',smallest)
print()

# Task 8
print('Task 8:\n')
nums=[]
while len(nums)<5:
    inputNum=input('Enter a number :')
    try:
        inputNum=int(inputNum)
        nums.append(inputNum)
    except ValueError:
        print('Invalid number')
        pass
evenNums=[]
for num in nums:
    if num%2==0:
        evenNums.append(num)
print('The even numbers entered are',evenNums)
print()

# Task 9
print('Task 9:\n')
def get_range(iterative):
    biggest=iterative[0]
    smallest=iterative[0]
    for number in iterative:
        if number>biggest:
            biggest=number
        if number<smallest:
            smallest=number
    range_=biggest-smallest
    return range_
print('The range of entered numbers is',get_range(nums))
print()

# Task 10
print('Task 10:\n')
def mean(l):
    total=0
    for e in l:
        total+=e
    return total/len(l)
def median(l):
    l.sort()
    middle=len(l)//2
    return l[middle]
def mode(l):
    mode=0
    modeCount=0
    for e in l:
        count=l.count(e)
        if count>modeCount:
            modeCount=count
            mode=number
    return mode, modeCount
def maximum(l):
    biggest=l[0]
    for e in l:
        if e>biggest:
            biggest=e
    return biggest
def minimum(l):
    smallest=l[0]
    for e in l:
        if e<smallest:
            smallest=e
    return smallest
nums=[]
while len(nums)<6:
    inputNum=input('Enter a number :')
    try:
        inputNum=int(inputNum)
        nums.append(inputNum)
    except ValueError:
        print('Invalid number')
        pass
print('List:',nums)
print('Mean:',mean(nums))
print('Median:',median(nums))
print('Maximum:',maximum(nums))
print('Minimum:',minimum(nums))
print('Range:'.get_range(nums))
